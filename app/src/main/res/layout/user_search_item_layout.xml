<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/username_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:text="user name"
        android:textSize="19sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_online"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@+id/username_search"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_toRightOf="@+id/username_search"
        android:src="@drawable/user"
        app:civ_border_color="#25EF3E"
        android:visibility="visible"
        app:civ_border_width="12dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_offline"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@+id/username_search"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_toRightOf="@+id/username_search"
        android:src="@drawable/user"
        app:civ_border_color="#F44336"
        android:visibility="gone"
        app:civ_border_width="12dp" />

    <TextView
        android:id="@+id/message_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_search"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/profile_image"
        android:maxLines="1"
        android:padding="6dp"
        android:text="user name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp" />

</RelativeLayout>